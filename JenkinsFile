
pipeline {
    agent {
        docker {
            image 'maven:3.5.4-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh "./mvnw clean install -DskipTests"
            }
        }
        stage("Runing unit tests") {
            steps {
                    sh "./mvnw test -Punit"
                }
                post {
                    always {
                        junit 'target/surefire-reports/*.xml'
                    }
                }
        }
    }
}
