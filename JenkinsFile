pipeline {
    agent {
        docker {
            image 'maven:3.5.4-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'cd src/test/java/com/example/Backend'
                sh 'mvn test -Dtest=BackendApplicationTest'
                sh 'mvn test -Dtest=SportsTest'
                sh 'mvn test -Dtest=UserTest'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

    }
}
